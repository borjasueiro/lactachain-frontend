<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.MilkCollection">
<LinearLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/FarmName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="Car Plate"
            android:textAlignment="center"
            android:textColor="#5E35B1"
            android:textSize="@dimen/header_font_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.77"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="50dp"
            android:paddingVertical="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.16666"
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/edit_text"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/edit_text"
                    app:boxBackgroundColor="@color/white"
                    android:textColorHint="@color/field_state"
                    android:hint="Car Registration"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/carPlate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_baseline_location_on_24"
                        android:gravity="center_horizontal"
                        android:inputType="none"
                        android:textSize="@dimen/font_size_forms" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.16666"
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/edit_text"
                    android:layout_height="wrap_content"
                    android:gravity="left|top"
                    app:hintTextColor="@color/edit_text"
                    app:boxBackgroundColor="@color/white"
                    android:textColorHint="@color/field_state"
                    android:hint="Tank Code"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tankCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:gravity="center_horizontal"
                        android:textColor="@color/edit_text_selected"
                        android:inputType="none"
                        android:textSize="@dimen/font_size_forms" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:layout_weight="0.16666"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxStrokeColor="@color/edit_text"
                    android:layout_height="wrap_content"
                    app:hintTextColor="@color/edit_text"
                    app:boxBackgroundColor="@color/white"
                    android:textColorHint="@color/field_state"
                    android:hint="Capacity"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/capacity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_baseline_opacity_24"
                        android:gravity="center_horizontal"
                        android:textColor="@color/edit_text_selected"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/font_size_forms" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingHorizontal="47dp"
                android:paddingVertical="20dp"
                android:layout_weight="0.16666">
                <ImageView
                    android:id="@+id/current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_colorize_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/sample_switch"
                    android:layout_marginEnd="47dp"
                    android:contentDescription="@string/transport"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/sample_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_gravity="center"
                    android:textColor="@color/edit_text_selected"
                    android:textSize="@dimen/font_size_forms" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/addTransportButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/add_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_baseline_add_64"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>